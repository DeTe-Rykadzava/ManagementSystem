@page "/counter"
@rendermode InteractiveServer
 
<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<div style="
            display: flex;
            align-items: flex-start;
            gap: 10px;
            flex: 1 0 0;
            align-self: stretch;">
    
    <div style="
                display: flex;
                padding: 20px;
                flex-direction: column;
                align-items: flex-start;
                gap: 30px;
                flex: 1 0 0;">
        
        <button class="btn_style_1" @onclick="IncrementCount" style="width: 280px;">Click me</button>
        <button class="btn_style_2" @onclick="IncrementCount" style="width: 280px;">Click me</button>
        <button class="btn_style_3" @onclick="IncrementCount" style="width: 280px;">Click me</button>
        <button class="btn_style_4" @onclick="IncrementCount" style="width: 280px;">Click me</button>
    </div>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}